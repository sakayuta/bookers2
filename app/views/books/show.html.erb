<p id="notice"></p>
<div class="container">
  <div class="row">
    <%= render 'book', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
             <%= link_to user_path(@user.id), do %>
              <%= image_tag @user.get_profile_image(100,100) %>
              <%= @user.name %>
             <% end %>
            </td>
            <td>
              <%= link_to @book1.title, book_path(@book1.id) %>
            </td>
            <td>
              <%= @book1.body %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>